<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Strings.TituloHome</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/jquery-1.11.1.min.js")"></script>
    <script src="@Url.Content("~/Content/admin-lte/bootstrap/js/bootstrap.min.js")"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/admin-lte/bootstrap/css/bootstrap.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin-lte/dist/css/font-awesome.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin-lte/dist/css/ionicons.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin-lte/dist/css/AdminLTE.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin-lte/dist/css/skins/skin-purple.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/typeahead/typeahead.js-bootstrap.css")" type="text/css"/>
    <link href="@Url.Content("~/Scripts/select2-3.5.4/select2.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Scripts/select2-3.5.4/select2-bootstrap-ok.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/home.css")" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")">
    <style>
        body {
            margin-top: 50px;
        }
        .logo-lg {
            font-family: "Times New Roman";
            font-size: 16px;
            color: #555299;
        }
        #logo-cnrl {
            margin-left: 11px;
            margin-top: 2px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="logo-lg">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Content/images/cnrl-logo-solo-50px.png")" alt="CNRL" height="46" width="42" id="logo-cnrl" />
                        <img src="@Url.Content("~/Content/images/cnrl.png")" alt="CNRL" height="25" width="457" />
                    </a>
                </span>
                <span class="logo-mini">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="@Url.Content("~/Content/images/cnrl-logo-solo-50px.png")" alt="CNRL" height="46" width="42" id="logo-cnrl" />
                        <img src="@Url.Content("~/Content/images/cnrl-sigla.png")" alt="CNRL" height="25"/>
                  </a>
                    <button class="btn bg-purple margin" id="btnFiltros">Filtros</button>
                    @if (Request.IsAuthenticated)
                    {
                        <a class="nav navbar-nav navbar-right" href="@Url.Action("Index", "Admin")">Administraci&oacute;n</a>
                    }
                    else
                    {
                        <a class="nav navbar-nav navbar-right"  href="@Url.Action("Login", "Cuenta", new { returnUrl = Url.Action("Index", "Home") })">Ingresar</a>
                    }
                </span>
                
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <div id="DlgFicha" class="modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h3 class="modal-title" id="DlgFichaTitulo"></h3>
                    </div>
                    <div class="modal-body" id="DlgFichaBody">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <img src="@Url.Content("~/Content/images/loading.gif")" class="ri" id="loading" alt="" />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Select2 -->
    <script src="@Url.Content("~/Scripts/select2-3.5.4/select2.min.js")"></script>
    <!-- Progreso -->
    <script src="@Url.Content("~/Content/nprogress/nprogress.js")"></script>
    <link href="@Url.Content("~/Content/nprogress/nprogress.css")" rel="stylesheet" />
    @RenderSection("scripts", false)
<script>
    $(document).ready(function () {
        $("#btnFiltros").click(function () {
            $(".main-sidebar").toggle();
        });
    });
//    "
    $(function () {
        window.google.maps.event.addDomListener(window, "resize", function () {
            var center = map.getCenter();
            window.google.maps.event.trigger(map, "resize");
            map.setCenter(center);
            if (window.mapaInstituto) {
                var mapa = window.mapaInstituto;
                center = mapa.getCenter();
                window.google.maps.event.trigger(mapa, "resize");
                mapa.setCenter(center);
                mapa.setZoom(10);
            }
        });
    });
</script>
</body>
</html>